<Window x:Class="CaptureTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Media Capture WebCam" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Ellipse x:Name="WebCamPlayerCircleContainer" Tag="WebCamPlayer" Width="300" Height="300" RenderTransformOrigin="0.5,0.5">
            <Ellipse.Fill>
                <ImageBrush x:Name="Preview" Stretch="UniformToFill" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</Window>
